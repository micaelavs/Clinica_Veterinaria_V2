@model IEnumerable<ClientPatientManagement.Core.Model.Room>
@{
    ViewBag.Title = "Listado de Salas";
}

<h2>Lista de salas</h2>

<table style='background:#ffd274; width: 100%;'>
    <thead>
        <tr>
            <th style="text-align:left; border-bottom: 1px solid black;">Código</th>
            <th style="text-align:left;  border-bottom: 1px solid black;">Nombre</th>
            <th style="text-align:left;  border-bottom: 1px solid black;">Localización</th>
            <th style="text-align:left;  border-bottom: 1px solid black;">Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id </td>
                <td> @item.Name</td>
                <td>@item.Location </td>
                <td><a style="color: black;" href="~/Room/Edit/@item.Id">EDITAR</a> -- <a style="color: black; " href="~/Room/Delete/@item.Id">ELIMINAR</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr></tr>
    </tfoot>
</table>
<br />
<a class="linki" style="font-weight:200; border-radius: 5px; background:#ffd274; text-decoration: none; color: black;" href="~/Room/Create">CREAR UNA SALA NUEVA</a>
    



